<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="DayItemBinding">
        <variable
            name="calendarInfo"
            type="com.example.calender.model.CalendarInfo" />

    </data>


    <LinearLayout
        android:id="@+id/Calendar_Background"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:background="@drawable/calendar_item">

        <TextView
            android:id="@+id/textView_DateNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textSize="14dp"
            app:setDate="@{calendarInfo}"
            tools:text="가가가"

            android:textColor="@color/black"
            android:layout_margin="5dp">

        </TextView>
    </LinearLayout>

</layout>